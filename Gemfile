# Gemfile

source "https://rubygems.org"

# General gems for algorithms and utilities
gem "algorithms", "~> 1.0.0"       # Useful for data structures and algorithms
gem "prime", "~> 0.1.0"           # Built-in Prime utilities for Ruby

# Binary operations
gem "bitwise", "~> 0.1.0"         # For working with binary data

# Math utilities
gem "matrix", "~> 0.4.2"          # Provides matrix operations
gem "bigdecimal", "~> 3.1.0"      # For working with large numbers, like Fibonacci

# File manipulation (if needed in some scripts)
gem "fileutils", "~> 1.6.0"       # For basic file operations

gem 'sorbet', group: :development
gem 'sorbet-runtime'
